<div class="row main-form">
  <div class="col-md-4">
    <%= form_for(product_info) do |f| %>
      <% if product_info.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product_info.errors.count, "error") %> prohibited this product_info from being saved:</h2>

          <ul>
          <% product_info.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :label %>
        <%= f.text_field :label, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :ordering %>
        <% order_value = product_info.new_record? ? ProductInfo.where(language_id: current_user.language_id).count + 1 : product_info.ordering.nil? ? 1 : product_info.ordering %>
        <%= f.number_field :ordering, class: 'form-control', min: 1, value: order_value %>
      </div>

      <div class="actions">
        <% submit_label = product_info.new_record? ? 'Create Additional Info' : 'Update Additional Info' %>
        <%= f.submit submit_label, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
