<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Label</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Sizes</th>
      <th>Prices</th>
      <th>Ordering</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.label %></td>
        <td><%= product.description %></td>
        <td><%= product.photo %></td>
        <td><%= product.sizes %></td>
        <td><%= product.prices %></td>
        <td><%= product.ordering %></td>
        <td><%= Language.find(product.language).option_label %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Remove', product, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %>

<br>

<%= link_to 'New Product', new_product_path %>
