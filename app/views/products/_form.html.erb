<div class="row main-form">
  <div class="col-md-4">
    <%= form_for product, :html => {:multipart => true} do |f| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :label %>
        <%= f.text_field :label, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <%= image_tag(product.photo_url) if product.photo? %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>

      <div class="form-group">
        <%= f.label :ordering %>
        <% order_value = product.new_record? ? Product.where(language_id: current_user.language_id).count + 1 : product.ordering.nil? ? 1 : product.ordering %>
        <%= f.number_field :ordering, class: 'form-control', min: 1, value: order_value %>
      </div>

      <%- if ProductInfo.where(language_id: current_user.language_id).count > 0 %>
          <hr>
          <div class="form-group">
            <%= f.label :additional_info %>
            <%= f.collection_select :additional_info, ProductInfo.where(language_id: current_user.language_id).order(:ordering).order(:label), :id, :label, {include_blank: false}, { :class => 'form-control', :multiple => 'multiple'} %>
          </div>
          <hr>
      <% end %>

      <div class="actions">
        <% submit_label = product.new_record? ? 'Create Product' : 'Update Product' %>
        <%= f.submit submit_label, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
