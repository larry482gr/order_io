<div class="row">
  <div class="col-md-4">
    <%= form_for product, :html => {:multipart => true} do |f| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :label %>
        <%= f.text_field :label, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <%= image_tag(product.photo_url) if product.photo? %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>

      <div class="form-group">
        <%= f.label :sizes %>
        <%= f.text_field :sizes, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :prices %>
        <%= f.text_field :prices, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :ordering %>
        <%= f.number_field :ordering, class: 'form-control', min: 1, value: Product.where(language_id: current_user.language_id).count + 1 %>
      </div>

      <div class="form-group">
        <%= f.label :language %>
        <%= f.collection_select :language_id, Language.order(:id), :id, :option_label, {include_blank: false}, { :class => 'form-control', :value => current_user.language_id} %>
        <%#= f.select("post", "person_id", Person.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
      </div>

      <div class="actions">
        <%= f.submit 'Create Product', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
