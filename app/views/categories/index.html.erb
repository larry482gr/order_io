<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Label</th>
      <th>Ordering</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.label %></td>
        <td><%= category.ordering %></td>
        <td>
          <%= link_to 'Show', category, class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-xs' %>
          <%= link_to 'Remove', category, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @categories %>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-primary btn-xs' %>
